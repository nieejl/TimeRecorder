<Page x:Class="TimeRecorder.Views.RecordDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeRecorder.Views"
      xmlns:converters="clr-namespace:TimeRecorder.Models.ValueConverters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400">
    <Page.Resources>
        <converters:TimeToStringConverter x:Key="TimeConverter"/>
        <Style x:Key="TimeTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="80"/>
        </Style>
        <!--<Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>-->
    </Page.Resources>
    <StackPanel Margin="20,10,20,10">
        <TextBox Text="{Binding RecordingTitle}" HorizontalAlignment="Center" FontSize="16"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,10,0,10" Grid.Column="0">
                <TextBox Text="{Binding StartTimeText}" BorderBrush="{Binding StartTimeColor}"
                         Style="{StaticResource TimeTextBox}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SaveStartTimeCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <DatePicker Margin="0,5,0,0" Text="{Binding StartDateText}"></DatePicker>
            <TextBox Text="{Binding StartTime, Converter={StaticResource TimeConverter}}" 
                     Background="{Binding StartTimeColor}"/>
            </StackPanel>
            <TextBox Style="{StaticResource TimeTextBox}" VerticalAlignment="Top"
                     Text="{Binding Recording.Duration}" FontSize="14" 
                     Margin="20,10,20,10" Grid.Column="1" HorizontalAlignment="Center"/>

            <StackPanel Margin="0,10,0,10" Grid.Column="2">
                <TextBox Text="{Binding EndTimeText}" BorderBrush="{Binding EndTimeColor}"
                         Style="{StaticResource TimeTextBox}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SaveStartTimeCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <DatePicker Margin="0,5,0,0"></DatePicker>
            </StackPanel>
        </Grid>
        <DockPanel Margin="0,5,0,5">
            <ComboBox Text="Project" IsEditable="True" Width="200">
            </ComboBox>
            <Button Margin="10,0,0,0" Command="{Binding AddNewProjectCommand}">
                <TextBlock Text="Add new project"/>
            </Button>
        </DockPanel>
        <DockPanel Margin="0,5,0,5" >
            <ComboBox IsEditable="True" Text="Tags" Width="200">
            </ComboBox>
            <CheckBox Margin="10,0,0,0" VerticalAlignment="Stretch" IsChecked="{Binding AddRepeat}">
                <TextBlock Text="Repeat next week" FontSize="14"/>
            </CheckBox>
        </DockPanel>
        <TextBlock Text="Description, notes or extra remarks about activity......................................................." TextWrapping="Wrap"/>
    </StackPanel>
</Page>
